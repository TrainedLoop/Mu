@model Mu.Repository.Character
<div class="col-md-4 col-md-offset-4">
    <div class="well">

        @using (Html.BeginForm("AddPoints", "Painel", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <fieldset>
                <legend>Distribuidor de Pontos</legend>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-dismissable alert-danger">
                        <strong>Droga!</strong> <a href="#" class="alert-link">@ViewBag.Error</a><br /> Tente denovo.
                    </div>
                }
                @if (ViewBag.Save != null)
                {
                    <div class="alert alert-dismissable alert-success">
                        <strong>Sucesso!</strong> <a href="#" class="alert-link">@ViewBag.Save</a><br />
                    </div>
                }

                <div class="col-lg-6">
                    <label>Nome: @Model.Name </label><input type="hidden" value="@Model.Name" name="CharName">
                </div>
                <div class="col-lg-6">
                    <label> Pontos: @Model.Leveluppoint</label><br />
                </div>
                <div class="well-sm">
                    <br /><br />
                    <label>Força @Model.Strength</label><input type="number" min="0" max="32767" placeholder="Adicionar" name="strength" class="form-control" /><br />
                    <label>Agilidade @Model.Dexterity</label><input type="number" min="0" max="32767" placeholder="Adicionar" name="agility" class="form-control" /><br />
                    <label>Vitalidade @Model.Vitality</label><input type="number" min="0" max="32767" placeholder="Adicionar" name="vitality" class="form-control" /><br />
                    <label>Energia @Model.Energy</label><input type="number" min="0" max="32767" placeholder="Adicionar" name="energy" class="form-control" /><br />
                    <button class="btn btn-sm btn-primary" style="float:right;" type="submit">Adicionar</button>
                </div>
            </fieldset>
        }
    </div>
</div>
