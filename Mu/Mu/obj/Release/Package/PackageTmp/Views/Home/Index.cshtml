@{
}

@model IList<Mu.Repository.Message>

<div class="col-md-12 well">
    @if (Model != null)
    {
        foreach (var item in Model.OrderByDescending(i => i.Id).Take(3))
        {
            <div class="col-md-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Mensagem do Mu Cassino!</h3>
                    </div>
                    <div class="panel-body">
                        @item.MessageString
                    </div>
                </div>
            </div>
        }
    }

    <div class="col-md-12">
        <div class="jumbotron">
            <center>

                <h2>Bem Vindo ao Mu Cassino Beta Test.</h2>
                <p>
                    Entre e @Html.ActionLink("registre-se", "Index", "Register") e faça o <a href="@Mu.Config.DownloadClientUrl">download</a> para ter acesso antecipado
                    ao unico Mu que vai pagar pra quem jogar
                </p>
                <p>Data de Estreia 10/08/2014 as 12:00.</p>
            </center>
        </div>
    </div>
</div>

